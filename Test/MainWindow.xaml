<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*" />
            <ColumnDefinition Width="215*" />
        </Grid.ColumnDefinitions>
        <DataGrid Name="g1" AutoGenerateColumns="False" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding name}" Header="Наименование подразделения"/>
                <DataGridTextColumn Binding="{Binding applicationDateAndTime}" Header="Дата и время заказа" Width="150"/>
                <DataGridTextColumn Binding="{Binding dateAndTimeOfCarProvision}" Header="Дата и время предоставления автомобиля"/>
                <DataGridTextColumn Binding="{Binding purposesOfUsingAuto}" Header="Цель использования автомобиля"/>
                <DataGridTextColumn Binding="{Binding route}" Header="Путь" Width="300"/>
                <DataGridTextColumn Binding="{Binding nameDocument}" Header="Название документа"/>
                <DataGridTextColumn Binding="{Binding lastName}" Header="Фамилия заказчика"/>
                <DataGridTextColumn Binding="{Binding cargo}" Header="Груз"/>
                <DataGridTextColumn Binding="{Binding applicationStatus}" Header="Статус заказа"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="50" Click="Button_Click" Grid.ColumnSpan="2" Margin="12,224,203,37">Добавить запись</Button>
        <Button Name="btnUPDATE" VerticalAlignment="Bottom" Click="btnUPDATE_Click">uPDATE</Button>
    </Grid>
</Window>
